<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinWithShell.Views.ProductDetailPage"
             Title="Detail">
  <StackLayout Padding="10">
      
        <Label Text="Product Name:" FontSize="Default"/>
        <Label Text="{Binding SelectedProduct.Name}" FontSize="Title" Padding="0,0,0,50"/>

        <Label Text="Product Description:" FontSize="Default"/>
        <Label Text="{Binding SelectedProduct.Description}" FontSize="Title" Padding="0,0,0,50"/>
      
  </StackLayout>
</ContentPage>